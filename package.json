{
  "name": "wechat-bot-wechaty",
  "version": "0.0.1",
  "description": "A wechat bot powered by wechaty & wechaty-puppet-donut",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./dist/main.js",
    "build": "tsc",
    "dev": "ts-node ./service/main.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sosohime/wechat-bot-wechaty.git"
  },
  "keywords": [
    "wechat",
    "wechaty",
    "bot",
    "typescript"
  ],
  "author": "sosohime",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sosohime/wechat-bot-wechaty/issues"
  },
  "homepage": "https://github.com/sosohime/wechat-bot-wechaty#readme",
  "dependencies": {
    "@types/jsdom": "^16.2.5",
    "axios": "^0.21.0",
    "file-box": "^0.16.4",
    "jsdom": "^16.4.0",
    "qrcode-terminal": "^0.12.0",
    "wechaty": "^0.53.0",
    "wechaty-plugin-contrib": "^0.14.15",
    "wechaty-puppet": "^0.32.3"
  },
  "devDependencies": {
    "@chatie/tsconfig": "0.10.1",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/node": "14.14.17",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "eslint": "7.16.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "3.3.0",
    "husky": "4.3.6",
    "pinst": "2.1.1",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.3",
    "ts-loader": "8.0.12",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "ci",
          "perf",
          "revert",
          "pages",
          "posts"
        ]
      ]
    }
  }
}
